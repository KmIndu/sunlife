document.addEventListener('DOMContentLoaded', function() {
    generateCaptcha();
    updateDate();
});

function generateCaptcha() {
    const captchaContainer = document.getElementById('generated-captcha');
    const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
    let captcha = '';
    for (let i = 0; i < 6; i++) {
        captcha += characters.charAt(Math.floor(Math.random() * characters.length));
    }
    captchaContainer.textContent = captcha;
}

function updateDate() {
    const dateContainer = document.getElementById('date');
    const today = new Date();
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    dateContainer.textContent = today.toLocaleDateString('en-US', options);
}

function login() {
    // Implement login logic here (dummy logic for demo)
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;
    const enteredCaptcha = document.getElementById('captcha').value;
    const generatedCaptcha = document.getElementById('generated-captcha').textContent;

    // Dummy validation (replace with actual validation)
    if (username && password && enteredCaptcha === generatedCaptcha) {
        document.getElementById('landing-container').style.display = 'none';
        document.getElementById('attendance-container').style.display = 'flex';
    } else {
        alert('Invalid credentials or captcha. Try again.');
    }
}

