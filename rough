public class Main {
    public static void main(String[] args) {
        String line = "if (pconIn.getADOConn().State == adStateClosed) {\n" +
                      "else if (prstInOut.State == adStateOpen) {";
        
        if (line.contains(".State == adState")) {
            line = line.replace(".State", ".getState()");
        }

        String result = line + "\n";

        System.out.println(result);
    }
}






public class Main {
    public static void main(String[] args) {
        String line = "if (pconIn.getADOConn().State == adStateClosed) {\n" +
                      "else if (prstInOut.State == adStateOpen) {";
        
       if (line.contains(".State == adStateClosed) {")) {
                    line = line.replace(".State == adState) {",
                            ".getState() == adState) {");
        }

        
        String result = line + "\n";

        
        System.out.println(result);
    }
}


